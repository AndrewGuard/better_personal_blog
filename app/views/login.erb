<div class="sign-in">
  <h1> Login </h1>
  <% if @login_error %>
  <h2> <%= @login_error %> </h2>
  <% end %>
  <form name="input" action="/auth_user" method="POST">
    <table>
      <tr>
        <td><label for="login"> Email </label><td>
        <td><input type="text" name="email"/></td>
      </tr>
      <tr>
        <td><label for="login"> Password </label><td>
        <td><input type="password" name="password"/></td>
      </tr>
    </table>
    <input type="submit" value="Login">
  </form>
</div>

<div class="sign-in">
  <h1> Sign Up </h1>
  <% if @error %>
  <h2> <%= @error %> </h2>
  <% end %>
  <form name="input" action="/create_user" method="POST">
    <table>
      <tr>
        <td><label for="new_user">  First Name </label></td>
        <td><input type="text" name="first_name"/></td>
      </tr>
      <tr>
        <td><label for="new_user">  Last Name </label></td>
        <td><input type="text" name="last_name"/></td>
      </tr>
      <tr>
        <td><label for="new_user"> Email Address </label></td>
        <td><input type="text" name="email"/></td>
      </tr>
      <tr>
        <td><label for="new_user"> Birthdate </label></td>
        <td><input type="text" name="birthdate"/></td>
      </tr>
      <tr>
        <td><label for="password"> Username </label></td>
        <td><input type="password" name="username"/></td>
      </tr>
      <tr>
        <td><label for="password"> Confirm Password </label></td>
        <td><input type="password" name="password_confirmation"/></td>
      </tr>

      <tr>
        <td><br><input type="submit" value="Create User"><br></td>
      </tr>
    </table>
  </form>
</div>